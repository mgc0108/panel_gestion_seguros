generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id       Int      @id @default(autoincrement())
  fullname String
  dni      String   @unique
  email    String?  @unique
  phone    String?
  address  String?
  policies Policy[]
}

model Policy {
  id           Int      @id @default(autoincrement())
  policyNumber String   @unique
  category     String
  premium      Float
  issuedAt     DateTime @default(now())
  expiresAt    DateTime
  status       String   @default("ACTIVE") // ACTIVE, MEJORAR
  customerId   Int
  customer     Customer @relation(fields: [customerId], references: [id])
}
